<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Red color when button is in normal state -->
    <item android:color="@color/red_color" android:state_pressed="false" android:state_focused="false" />
    <!-- Green color when button is pressed or focused -->
    <item android:color="@color/green_color" android:state_pressed="true" />
    <item android:color="@color/green_color" android:state_focused="true" />
</selector>
